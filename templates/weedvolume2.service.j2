[Unit]
Description=SeaweedFS volume
Requires=network.target weedmaster2.service
After=network.target weedmaster2.service

[Service]
Type=simple
User=root
Group=root

ExecStart=/usr/local/bin/weed -v={{ loglevel }} volume -dir={{ weedvolumedir2 }} -ip={{ weedvolumeip }} -max={{ weedvolumemax }} -mserver={{ masterserver2 }} -port={{ weedvolumeport2 }}
WorkingDirectory=/opt
SyslogIdentifier=seaweedfs-volume

[Install]
WantedBy=multi-user.target
