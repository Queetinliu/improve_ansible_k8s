# This is the default ansible 'hosts' file.
#
# It should live in /etc/ansible/hosts
#
#   - Comments begin with the '#' character
#   - Blank lines are ignored
#   - Groups of hosts are delimited by [header] elements
#   - You can enter hostnames or ip addresses
#   - A hostname/ip can be a member of multiple groups

# Ex 1: Ungrouped hosts, specify before any group headers.

## green.example.com
## blue.example.com
## 192.168.100.1
## 192.168.100.10

httprepo ansible_ssh_host=192.168.56.26
master01 ansible_ssh_host=192.168.56.26 hostname=master01 nodeip=192.168.56.26 iface=enp0s8 flanneld_ip=192.168.56.26
worker01 ansible_ssh_host=192.168.56.27 hostname=worker01 nodeip=192.168.56.27 iface=enp0s8 flanneld_ip=192.168.56.27
etcd01 ansible_ssh_host=192.168.56.26   nodeip=192.168.56.26

weedmaster01 ansible_ssh_host=192.168.56.26
weedvolume01 ansible_ssh_host=192.168.56.27
weedfiler01 ansible_ssh_host=192.168.56.26
# Ex 2: A collection of hosts belonging to the 'webservers' group
[masters]
master01

[etcd]
etcd01

[workers]
master01
worker01

#[gpuservers]
#master01
#master02
#master03

[weedmasters]
weedmaster01

[weedvolumes]
weedvolume01

[weedfilers]
weedfiler01

[weedservers:children]
weedmasters
weedvolumes
weedfilers
## [webservers]
## alpha.example.org
## beta.example.org
## 192.168.1.100
## 192.168.1.110

# If you have multiple hosts following a pattern you can specify
# them like this:

## www[001:006].example.com

# Ex 3: A collection of database servers in the 'dbservers' group

## [dbservers]
## 
## db01.intranet.mydomain.net
## db02.intranet.mydomain.net
## 10.25.1.56
## 10.25.1.57

# Here's another example of host ranges, this time there are no
# leading 0s:

## db-[99:101]-node.example.com

